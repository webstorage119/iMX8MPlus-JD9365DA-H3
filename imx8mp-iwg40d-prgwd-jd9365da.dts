/* HDMI 비활성화 (MIPI DSI 사용) */
&irqsteer_hdmi {
	status = "disabled";
};

&hdmi_blk_ctrl {
	status = "disabled";
};

&hdmi {
	status = "disabled";
};

&hdmiphy {
	status = "disabled";
};

&lcdif3 {
	status = "disabled";
};

&lcdif2 {
	status = "disabled";
};

&ldb {
	status = "disabled";
};

&ldb_phy {
	status = "disabled";
};

/* MIPI DSI - JD9365DA */
&mipi_dsi {
	status = "okay";
	//fsl,clock-drop-level = <2>;
	fsl,clock-drop-level = <2>;
	assigned-clocks = <&clk IMX8MP_CLK_MEDIA_MIPI_PHY1_REF>;
    assigned-clock-rates = <24000000>;

	// 더 안정적인 초기화를 위한 추가 설정
    panel-supply = <&reg_3p3v>;

	jd9365da_panel: panel@0 {
		compatible = "jadard,jd9365da-h3";
		reg = <0>;
		dsi-lanes = <4>;
		video-mode = <2>;
		//video-mode = <0>;
		/* 0: burst mode
		 * 1: non-burst mode with sync event
		 * 2: non-burst mode with sync pulse 
		 */

		width-mm = <154>;
		height-mm = <85>;

		vdd-supply = <&reg_3p3v>;		/* 기존 3.3V regulator 사용 */
		vccio-supply = <&reg_1p8v>;		/* 기존 1.8V regulator 사용 */
		
		/* pinctrl 설정 추가 */
        pinctrl-names = "default";
        pinctrl-0 = <&pinctrl_jd9365da_gpio>;

		//reset-gpios = <&gpio1 9 GPIO_ACTIVE_LOW>;
		//enable-gpios = <&gpio3 8 GPIO_ACTIVE_HIGH>;
		reset-gpios = <&gpio1 8 GPIO_ACTIVE_LOW>;    // GPIO1_IO08 (P126 RESET_OUT#)
		enable-gpios = <&gpio3 8 GPIO_ACTIVE_HIGH>;  // GPIO3_IO08 (S133 LCD0_VDD_EN)
		
		backlight = <&jd9365da_backlight>;
		
		status = "okay";

		port {
			panel_in: endpoint {
				remote-endpoint = <&mipi_dsi_out>;
			};
		};
	};

	/* MIPI DSI controller의 양방향 포트 정의 */
	ports {
		#address-cells = <1>;
		#size-cells = <0>;
	
		/* 입력 포트: LCDIF1에서 받음 */
		port@0 {
			reg = <0>;
			mipi_dsi_from_lcdif1: endpoint {
				remote-endpoint = <&lcdif1_to_mipi_dsi>;
			};
		};
	
		/* 출력 포트: 패널로 전송 */
		port@1 {
			reg = <1>;
			mipi_dsi_out: endpoint {
				remote-endpoint = <&panel_in>;
			};
		};
	};
};

/* PWM1 for JD9365DA backlight */
&pwm1 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_pwm1>;
	status = "okay";
};

/*LCD Display controller*/
&lcdif1 {
	status = "okay";

	/* LCDIF1 → MIPI-DSI 연결 정의 */
	port {
		lcdif1_to_mipi_dsi: endpoint {
			remote-endpoint = <&mipi_dsi_from_lcdif1>;
		};
	};
};

/* GT9271 Touch */
&i2c5 {

	//clock-frequency = <100000>;  // 400kHz → 100kHz로 낮춤 (안정성)
    //pinctrl-names = "default";
    //pinctrl-0 = <&pinctrl_i2c5>;
    //status = "okay";

	goodix_ts@5d {
	//goodix_ts@14 {
		compatible = "goodix,gt9271";
		//compatible = "goodix,gt911";  // gt9271 대신 gt911 사용
		
		reg = <0x5d>;
		//reg = <0x14>;

		clock-frequency = <100000>; // 400kHz → 100kHz
		
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_ts_goodix>;

		// 전원 공급 추가
        AVDD28-supply = <&reg_3p3v>;  // VDD_CTSP
        VDDIO-supply = <&reg_1p8v>;   // VCC_1V8
		
		interrupt-parent = <&gpio4>;
		//interrupts = <21 IRQ_TYPE_EDGE_FALLING>;
		interrupts = <21 IRQ_TYPE_LEVEL_LOW>;     // EDGE → LEVEL로 변경
		irq-gpios = <&gpio4 21 GPIO_ACTIVE_LOW>;
		reset-gpios = <&gpio4 3 GPIO_ACTIVE_LOW>;
		
		touchscreen-size-x = <800>;
		touchscreen-size-y = <1280>;
		touchscreen-max-id = <10>;
		
		//touchscreen-max-pressure = <1024>;
    	//touchscreen-fuzz-x = <4>;
    	//touchscreen-fuzz-y = <4>;
    	//touchscreen-fuzz-pressure = <2>;
		
		status = "okay";
	};
};

&iomuxc {
	pinctrl_pwm1: pwm1grp {
		fsl,pins = <
			MX8MP_IOMUXC_I2C4_SDA__PWM1_OUT        0x116
		>;
	};

	pinctrl_ts_goodix: ts-goodix {
		fsl,pins = <
			MX8MP_IOMUXC_SAI2_RXFS__GPIO4_IO21     0x1c4  /* Touch IRQ */
			MX8MP_IOMUXC_SAI1_RXD1__GPIO4_IO03     0x1c4  /* Touch Reset */
			//MX8MP_IOMUXC_SAI2_RXFS__GPIO4_IO21     0x1c6  /* Touch IRQ - pull-up */
        	//MX8MP_IOMUXC_SAI1_RXD1__GPIO4_IO03     0x146  /* Touch Reset - pull-down */
		>;
	};

	pinctrl_jd9365da_gpio: jd9365da-gpio-grp {
		fsl,pins = <
			MX8MP_IOMUXC_GPIO1_IO08__GPIO1_IO08     0x1c4  /* LCD Reset */
			MX8MP_IOMUXC_NAND_DATA02__GPIO3_IO08    0x1c4  /* LCD Enable */
			//MX8MP_IOMUXC_GPIO1_IO08__GPIO1_IO08     0x146  /* LCD Reset - pull-down */
        	//MX8MP_IOMUXC_NAND_DATA02__GPIO3_IO08    0x146  /* LCD Enable - pull-down */
		>;
	};
};
